generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// =====================================
// Enums
// =====================================
enum UserRole {
  WORKER
  SUPER_ADMIN
}

enum TaskStatus {
  NEW
  PENDING
  IN_ACTION
  IN_REVIEW
  COMPLETED
  LATE
  PAID
  FAILED
  CANCELLED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum TaskType {
  STANDARD
  HIGH_VALUE
  PREMIUM
}

enum PaymentStatus {
  NOT_PAID
  PAID
}

enum LedgerType {
  TASK_REWARD
  BONUS
  ADJUSTMENT
  WITHDRAWAL
}

enum NotificationType {
  TASK_ASSIGNED
  TASK_APPROVED
  TASK_REJECTED
  PAYMENT_RECORDED
  WORKER_JOINED
  TASK_SUBMITTED
}

enum PaymentMethodType {
  BANK_ACCOUNT
  PAYPAL
  CRYPTO
}

enum AuthTokenType {
  OTP
  SESSION
}

// =====================================
// User
// =====================================
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  avatarUrl String?
  role      UserRole
  isActive  Boolean  @default(true)

  xp      Int     @default(0)
  balance Decimal @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasksCreated        Task[]           @relation("TaskCreator")
  tasksAssigned       Task[]           @relation("TaskAssignee")
  taskSubmissions     TaskSubmission[] @relation("TaskSubmitter")
  reviewedSubmissions TaskSubmission[] @relation("Reviewer")
  ledgerEntries       LedgerEntry[]
  notifications       Notification[]
  authTokens          AuthToken[]
  paymentMethods      PaymentMethod[]
}

// =====================================
// Task
// =====================================
model Task {
  id          String       @id @default(uuid())
  title       String
  description String
  steps       String?
  priority    TaskPriority
  type        TaskType

  budget                Decimal
  commissionPercent     Decimal
  timeToCompleteMin     Int
  deadline              DateTime?
  maxSubmissionDelayMin Int?
  status         TaskStatus @default(NEW)
  startedAt      DateTime?
  submittedAt    DateTime?
  completedAt    DateTime?

  createdById String
  createdBy   User   @relation("TaskCreator", fields: [createdById], references: [id])

  assignedUserId String?
  assignedTo  User?  @relation("TaskAssignee", fields: [assignedUserId], references: [id])

  categoryId String
  category   TaskCategory @relation(fields: [categoryId], references: [id])

  submissions   TaskSubmission[]
  ledgerEntries LedgerEntry[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdById])
  @@index([categoryId])
  @@index([type, priority])
  @@index([assignedUserId, status])
  @@index([status])
}

model TaskSubmission {
  id String @id @default(uuid())

  taskId   String
  proofUrl String
  comment  String?

  isLate        Boolean
  adminFeedback String?
  submittedById String // Worker who submitted this task
  reviewedById  String? // Admin who reviewed this submission
  isLatest      Boolean @default(true) // Track the latest submission

  task       Task  @relation(fields: [taskId], references: [id])
  submittedBy User @relation("TaskSubmitter", fields: [submittedById], references: [id])
  reviewedBy User? @relation("Reviewer", fields: [reviewedById], references: [id])

  createdAt  DateTime  @default(now())
  reviewedAt DateTime?

  @@index([taskId, isLatest])
  @@index([taskId])
  @@index([submittedById])
  @@index([submittedById, taskId])
}

// =====================================
// Finance & Ledger
// =====================================
model LedgerEntry {
  id     String     @id @default(uuid())
  userId String
  type   LedgerType

  amount        Decimal
  description   String? // Optional description/notes for the transaction
  relatedTaskId String?

  createdAt DateTime @default(now())

  user        User  @relation(fields: [userId], references: [id])
  relatedTask Task? @relation(fields: [relatedTaskId], references: [id])

  @@index([userId, type])
  @@index([userId, createdAt])
  @@index([relatedTaskId])
}

// =====================================
// Gamification
// =====================================
model LevelConfig {
  level             Int        @id
  xpRequired        Int
  earningMultiplier Decimal
  unlockedTaskTypes TaskType[]
}

// =====================================
// Notifications
// =====================================
model Notification {
  id     String           @id @default(uuid())
  userId String
  type   NotificationType

  title               String
  message             String
  isRead              Boolean @default(false)
  relatedTaskId       String?
  relatedAssignmentId String?

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId, isRead])
  @@index([userId, createdAt])
  @@index([type])
}

// =====================================
// Authentication
// =====================================
model AuthToken {
  id        String        @id @default(uuid())
  userId    String
  token     String        @unique
  type      AuthTokenType
  expiresAt DateTime
  used      Boolean       @default(false)

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([token, expiresAt])
  @@index([userId])
}

// =====================================
// Task Categories (Admin-editable)
// =====================================
model TaskCategory {
  id          String  @id @default(uuid())
  name        String  @unique
  description String?
  isActive    Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks Task[]
}

// =====================================
// Bonus Configuration
// =====================================
model BonusConfig {
  id                   String  @id @default(uuid())
  name                 String  @unique
  description          String?
  timeThresholdPercent Int // e.g., 100 means bonus if completed within timeToComplete
  bonusPercent         Decimal // Percentage of base reward to add as bonus
  isActive             Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =====================================
// Payment Methods
// =====================================
model PaymentMethod {
  id          String            @id @default(uuid())
  userId      String
  type        PaymentMethodType
  provider    String? // e.g., "Chase Bank", "PayPal"
  accountInfo String // Encrypted/hashed account details
  isDefault   Boolean           @default(false)
  isActive    Boolean           @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}

// =====================================
// System / Config
// =====================================
model SystemSetting {
  key         String  @id
  value       String
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
