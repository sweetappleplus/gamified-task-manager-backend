generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// =====================================
// Enums
// =====================================
enum UserRole {
  WORKER
  SUPER_ADMIN
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum TaskType {
  STANDARD
  HIGH_VALUE
  PREMIUM
}

enum PaymentMethodType {
  BANK_ACCOUNT
  PAYPAL
  CRYPTO
  CARD
}

enum TaskStatus {
  NEW
  PENDING
  IN_ACTION
  IN_REVIEW
  COMPLETED
  LATE
  PAID
  FAILED
  CANCELLED
}

enum LedgerType {
  TASK_REWARD
  BONUS
  ADJUSTMENT
  WITHDRAWAL
}

enum NotificationType {
  TASK_ASSIGNED
  TASK_APPROVED
  TASK_REJECTED
  PAYMENT_RECORDED
  WORKER_JOINED
  TASK_SUBMITTED
}

enum SprintStatus {
  DRAFT
  ACTIVE
  COMPLETED
  CANCELLED
}

// =====================================
// System Setting
// =====================================
model SystemSetting {
  key         String  @id
  value       String
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =====================================
// Gamification
// =====================================
model LevelConfig {
  level             Int        @id
  xpRequired        Int
  earningMultiplier Decimal
  unlockedTaskTypes TaskType[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =====================================
// Task
// =====================================
model Task {
  id          String       @id @default(uuid())
  title       String
  description String
  steps       String?
  priority    TaskPriority
  type        TaskType

  budget                Decimal
  commissionPercent     Decimal
  timeToCompleteMin     Int
  deadline              DateTime?
  maxSubmissionDelayMin Int?
  status                TaskStatus @default(NEW)
  startedAt             DateTime?
  submittedAt           DateTime?
  completedAt           DateTime?

  createdById String
  createdBy   User   @relation("TaskCreator", fields: [createdById], references: [id])

  assignedUserId String?
  assignedTo     User?   @relation("TaskAssignee", fields: [assignedUserId], references: [id])

  categoryId String
  category   TaskCategory @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  notifications Notification[]
  ledgerEntries LedgerEntry[]
  submissions   TaskSubmission[]
  sprintTasks   SprintTask[]
}

model TaskSubmission {
  id String @id @default(uuid())

  taskId   String
  proofUrl String
  comment  String?

  isLate        Boolean
  adminFeedback String?
  submittedById String // Worker who submitted this task
  reviewedById  String? // Admin who reviewed this submission
  isLatest      Boolean @default(true) // Track the latest submission

  task        Task  @relation(fields: [taskId], references: [id])
  submittedBy User  @relation("TaskSubmitter", fields: [submittedById], references: [id])
  reviewedBy  User? @relation("Reviewer", fields: [reviewedById], references: [id])

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  reviewedAt DateTime?

  @@index([taskId, isLatest])
  @@index([taskId])
  @@index([submittedById])
  @@index([submittedById, taskId])
}

// =====================================
// Task Categories
// =====================================
model TaskCategory {
  id          String  @id @default(uuid())
  name        String  @unique
  description String?
  isActive    Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks Task[]
}

// =====================================
// User
// =====================================
model User {
  id          String    @id @default(uuid())
  email       String    @unique
  name        String?
  avatarUrl   String?
  role        UserRole
  isActive    Boolean   @default(true)
  lastLoginAt DateTime?

  earning Decimal @default(0)
  balance Decimal @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasksCreated        Task[]           @relation("TaskCreator")
  tasksAssigned       Task[]           @relation("TaskAssignee")
  taskSubmissions     TaskSubmission[] @relation("TaskSubmitter")
  reviewedSubmissions TaskSubmission[] @relation("Reviewer")
  paymentMethods      PaymentMethod[]
  refreshTokens       RefreshToken[]
  otps                Otp[]
  notifications       Notification[]
  ledgerEntries       LedgerEntry[]
  sprintsCreated      DailySprint[]    @relation("SprintCreator")
  sprintProgress      SprintProgress[]

  @@index([email])
}

// =====================================
// Payment Methods
// =====================================
model PaymentMethod {
  id          String            @id @default(uuid())
  userId      String
  type        PaymentMethodType
  provider    String?
  accountInfo String
  isDefault   Boolean           @default(false)
  isActive    Boolean           @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}

// =====================================
// Authentication
// =====================================
model Otp {
  id        String   @id @default(uuid())
  email     String
  userId    String? // Optional: null for registration, set for login
  otpHash   String // Hashed OTP for security
  isUsed    Boolean  @default(false)
  expiresAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([email, expiresAt])
  @@index([email, isUsed])
  @@index([userId])
}

model RefreshToken {
  id         String   @id @default(uuid())
  userId     String
  tokenHash  String // Hashed refresh token
  deviceInfo String? // Optional: browser/device fingerprint
  ipAddress  String? // Optional: for security tracking
  isRevoked  Boolean  @default(false)
  expiresAt  DateTime
  lastUsedAt DateTime @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRevoked])
  @@index([tokenHash])
  @@index([expiresAt])
}

// =====================================
// Notifications
// =====================================
model Notification {
  id     String           @id @default(uuid())
  userId String
  type   NotificationType

  title         String
  message       String
  isRead        Boolean @default(false)
  relatedTaskId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  relatedTask Task? @relation(fields: [relatedTaskId], references: [id])
  user        User  @relation(fields: [userId], references: [id])

  @@index([userId, isRead])
  @@index([userId, createdAt])
  @@index([type])
}

// =====================================
// Finance & Ledger
// =====================================
model LedgerEntry {
  id     String     @id @default(uuid())
  userId String
  type   LedgerType

  amount        Decimal
  description   String? // Optional description/notes for the transaction
  relatedTaskId String?

  createdAt DateTime @default(now())

  user        User  @relation(fields: [userId], references: [id])
  relatedTask Task? @relation(fields: [relatedTaskId], references: [id])

  @@index([userId, type])
  @@index([userId, createdAt])
  @@index([relatedTaskId])
}

// =====================================
// Bonus Configuration
// =====================================
model BonusConfig {
  id           String   @id @default(uuid())
  TaskType     TaskType @unique
  name         String   @unique
  description  String?
  bonusPercent Decimal // Percentage of base reward to add as bonus
  isActive     Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =====================================
// Daily Sprints
// =====================================
model DailySprint {
  id          String       @id @default(uuid())
  name        String
  description String?
  startDate   DateTime // Sprint start date/time (24-hour window begins)
  endDate     DateTime // Sprint end date/time (24 hours after start)
  status      SprintStatus @default(DRAFT)
  isActive    Boolean      @default(true)

  createdById String
  createdBy   User   @relation("SprintCreator", fields: [createdById], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks    SprintTask[]
  progress SprintProgress[]

  @@index([startDate, endDate])
  @@index([status])
  @@index([createdById])
  @@index([isActive, status])
}

model SprintTask {
  id       String @id @default(uuid())
  sprintId String
  taskId   String
  order    Int // Order of task in the sprint (1, 2, 3, ...)

  sprint DailySprint @relation(fields: [sprintId], references: [id], onDelete: Cascade)
  task   Task        @relation(fields: [taskId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([sprintId, taskId])
  @@index([sprintId, order])
  @@index([taskId])
}

model SprintProgress {
  id             String    @id @default(uuid())
  sprintId       String
  userId         String
  tasksCompleted Int       @default(0) // Number of tasks completed in this sprint
  totalTasks     Int // Total tasks in the sprint (denormalized for quick access)
  startedAt      DateTime? // When worker started working on the sprint
  completedAt    DateTime? // When worker completed all tasks in the sprint

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sprint DailySprint @relation(fields: [sprintId], references: [id], onDelete: Cascade)
  user   User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([sprintId, userId])
  @@index([userId, sprintId])
  @@index([sprintId])
  @@index([userId])
}
