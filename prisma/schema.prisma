generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// =====================================
// Enums
// =====================================
enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum TaskType {
  STANDARD
  HIGH_VALUE
  PREMIUM
}

// =====================================
// System Setting
// =====================================
model SystemSetting {
  key         String  @id
  value       String
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =====================================
// Gamification
// =====================================
model LevelConfig {
  level             Int        @id
  xpRequired        Int
  earningMultiplier Decimal
  unlockedTaskTypes TaskType[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =====================================
// Task
// =====================================
model Task {
  id          String       @id @default(uuid())
  title       String
  description String
  steps       String?
  priority    TaskPriority
  type        TaskType

  categoryId String
  category   TaskCategory @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =====================================
// Task Categories
// =====================================
model TaskCategory {
  id          String  @id @default(uuid())
  name        String  @unique
  description String?
  isActive    Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks Task[]
}